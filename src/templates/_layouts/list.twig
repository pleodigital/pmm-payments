{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("pleodigital\\pmmpayments\\assetbundles\\pmmpayments\\PmmpaymentsAsset") %}
{% do view.registerAssetBundle("pleodigital\\pmmpayments\\assetbundles\\paymentscpsection\\PaymentsCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "???" %}

{# The title of this CP section #}
{% set title = "Wp≈Çaty" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('pmm-payments') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@pleodigital/pmmpayments/assetbundles/paymentscpsection/dist', true) ~ '/img/Payments-icon.svg' %}

{% set sidebar %}

    {% set selectedSidebarItem = craft.app.request.getSegment(3) %}
    {% set baseUrl = 'pmm-payments/list/' %}

    <nav class="last sidebar-pmmpayments">
        <ul>
            <li>
                <a href="{{ cpUrl(baseUrl~'payu') }}" class="load-entries sel">PayU</a>
            </li>
            <li>
                <a href="{{ cpUrl(baseUrl~'paypal') }}" class="load-entries">PayPal</a>
            </li>          
        </ul>
    </nav>

{% endset %}

{% block content %}
    <div class="main">
        <div class="elements busy"></div>
    </div>
{% endblock %}
